<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_above="@+id/nav_view"
    android:scrollbarThumbVertical="@android:color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/image_main"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/blankprofile"
            android:scaleType="fitXY" />

        <GridLayout
            android:id="@+id/grid_more_picture_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:columnCount="3"
            android:rowCount="1"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:id="@+id/first_image"
                android:layout_gravity="top|left"
                android:layout_marginEnd="20dp"
                android:background="@drawable/add_image_icon"/>
            <ImageView
                android:id="@+id/second_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:layout_gravity="left|top"
                android:background="@drawable/add_image_icon"/>
            <ImageView
                android:id="@+id/third_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_marginEnd="20dp"
                android:layout_gravity="left|top"
                android:background="@drawable/add_image_icon"/>
        </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_edit"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorBtn"
            android:src="@drawable/ic_edit_black_24dp"

            />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_showLastProfile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorBtn"
        android:src="@drawable/ic_keyboard_arrow_up_black_24dp"


        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginStart="20dp"
        android:id="@+id/btn_showMoreProfile"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/colorBtn"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"

        />
    </LinearLayout>
        <ListView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_item"
            android:transcriptMode="alwaysScroll"
            android:layout_gravity="start"
            />
    </LinearLayout>



