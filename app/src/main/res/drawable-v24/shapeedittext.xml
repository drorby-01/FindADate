<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <padding android:bottom="7dp" android:left="7dp" android:right="7dp" android:top="7dp"/>
            <gradient android:startColor="@android:color/white" android:endColor="@color/colorWhite"/>
            <stroke android:color="@android:color/white" android:width="2dp"/>
        </shape>
    </item>
</selector>